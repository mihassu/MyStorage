<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootNode"
      alignment="CENTER" prefHeight="400.0" prefWidth="400.0"
      style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="ru.mihassu.mystorage.MainController">

    <HBox>
        <TextField fx:id="tfFileName" focusTraversable="false"
                   promptText="Укажите имя файла" HBox.hgrow="ALWAYS" />
        <Button onAction="#onPressUploadBtn" text="Закачать" />
    </HBox>

    <HBox>
        <ListView fx:id="clientFilesList" VBox.vgrow="ALWAYS" />
        <ListView fx:id="serverFilesList" VBox.vgrow="ALWAYS" />
    </HBox>

    <Button onAction="#onPressDisconnectBtn" text="Отключиться" />
    <Button onAction="#onPressRefreshBtn" text="Обновить" />


</VBox>
